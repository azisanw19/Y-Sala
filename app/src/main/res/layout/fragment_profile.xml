<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/profile_emailaddress"
        android:layout_width="254dp"
        android:layout_height="31dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_input_booking"
        android:paddingStart="@dimen/activity_margin"

        android:paddingTop="@dimen/small_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:paddingBottom="@dimen/small_margin"
        android:text="@string/email"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/profile_fullname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profile_fullname"
        app:layout_constraintTop_toBottomOf="@+id/profile_fullname" />

    <TextView
        android:id="@+id/profile_phonenumber"
        android:layout_width="251dp"
        android:layout_height="29dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_input_booking"
        android:paddingStart="@dimen/activity_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingEnd="@dimen/activity_margin"

        android:paddingBottom="@dimen/small_margin"
        android:text="@string/phone_number"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/profile_emailaddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profile_emailaddress"
        app:layout_constraintTop_toBottomOf="@+id/profile_emailaddress" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="251dp"
        android:layout_height="29dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_input_booking"
        android:paddingStart="@dimen/activity_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingEnd="@dimen/activity_margin"

        android:paddingBottom="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="@id/edit_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/edit_email"
        app:layout_constraintTop_toBottomOf="@id/edit_email" />

    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_emailaddress"
        app:layout_constraintEnd_toStartOf="@+id/profile_emailaddress"
        app:layout_constraintTop_toTopOf="@+id/profile_emailaddress"
        app:layout_constraintVertical_bias="0.714"
        app:srcCompat="@drawable/custom_ic_email" />

    <ImageView
        android:id="@+id/icon_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_phonenumber"
        app:layout_constraintEnd_toStartOf="@+id/profile_phonenumber"
        app:layout_constraintTop_toTopOf="@+id/profile_phonenumber"
        app:srcCompat="@drawable/ic_telephone" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/round_input_booking"

        android:paddingStart="@dimen/activity_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:paddingBottom="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="@id/picture_placeholder"
        app:layout_constraintTop_toBottomOf="@id/picture_placeholder" />

    <ImageView
        android:id="@+id/icon_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_fullname"
        app:layout_constraintEnd_toStartOf="@+id/profile_fullname"
        app:layout_constraintTop_toTopOf="@+id/profile_fullname"
        app:srcCompat="@drawable/custom_ic_profile_gray" />

    <TextView
        android:id="@+id/profile_fullname"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/round_input_booking"

        android:textColor="@color/black"
        android:paddingStart="@dimen/activity_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:paddingBottom="@dimen/small_margin"

        app:layout_constraintEnd_toEndOf="@+id/profile_change_text"
        app:layout_constraintStart_toStartOf="@id/picture_placeholder"
        app:layout_constraintTop_toBottomOf="@id/picture_placeholder" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="254dp"
        android:layout_height="31dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_input_booking"
        android:paddingStart="@dimen/activity_margin"

        android:paddingTop="@dimen/small_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:paddingBottom="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="@id/edit_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/edit_name"
        app:layout_constraintTop_toBottomOf="@id/edit_name" />


    <ImageView
        android:id="@+id/profile_profilepic"
        android:layout_width="121dp"
        android:layout_height="116dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"

        android:src="@drawable/profile_dummy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/picture_placeholder"
        android:layout_width="121dp"
        android:layout_height="116dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"

        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/profile_change_info"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/picture_placeholder"
        app:layout_constraintTop_toTopOf="@id/picture_placeholder"
        app:srcCompat="@drawable/ic_setting" />

    <TextView
        android:id="@+id/profile_change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="60dp"
        android:text="Change Profile Info"
        app:layout_constraintBottom_toBottomOf="@+id/profile_change_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_change_info"
        app:layout_constraintTop_toTopOf="@+id/profile_change_info"
        app:layout_constraintVertical_bias="0.65" />

    <ImageView
        android:id="@+id/profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@id/picture_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/profile_change_info"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profile_change_info"
        app:srcCompat="@drawable/ic_outline_logout" />

    <Button
        android:id="@+id/confirm_info_edit"
        android:layout_width="116dp"
        android:layout_height="45dp"

        android:layout_marginTop="60dp"
        android:background="@drawable/round_input_booking"
        android:paddingStart="@dimen/activity_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:text="@string/confirm"
        app:layout_constraintEnd_toEndOf="@id/edit_phone"
        app:layout_constraintTop_toBottomOf="@id/edit_phone" />

    <ImageView
        android:id="@+id/cancel_edit"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginEnd="57dp"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_info_edit"
        app:layout_constraintEnd_toStartOf="@+id/confirm_info_edit"
        app:layout_constraintTop_toTopOf="@+id/confirm_info_edit"
        app:srcCompat="@drawable/ic_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>