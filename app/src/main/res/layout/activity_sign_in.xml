<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/splash_welcome"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/actionbar_text_size"
            android:textStyle="bold"
            app:drawableTopCompat="@drawable/img_icon" />


        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_round_height"
            android:layout_marginTop="@dimen/section_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/et_round"
            android:hint= "@string/email"
            android:drawableStart="@drawable/custom_ic_email"
            android:drawablePadding="@dimen/normal_margin"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/normal_margin"
            android:paddingEnd="@dimen/normal_margin"
            android:textSize="@dimen/normal_text_size"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_round_height"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/et_round"
            android:hint="@string/password"
            android:drawableStart="@drawable/custom_ic_password"
            android:drawablePadding="@dimen/normal_margin"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="@dimen/normal_margin"
            android:paddingEnd="@dimen/normal_margin"
            android:textSize="@dimen/normal_text_size"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_round_height"
            android:layout_marginTop="@dimen/section_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@drawable/btn_round"
            android:text="@string/sign_in"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@android:color/white"
            android:ems="10"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/section_margin"
            android:layout_marginBottom="@dimen/section_margin"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/no_account"
            android:textColor="@android:color/black" />

    </LinearLayout>

</ScrollView>
