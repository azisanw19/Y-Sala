<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:text="@string/booking_homestay"
        android:textStyle="bold"
        android:textSize="@dimen/actionbar_text_size"
        android:textColor="@android:color/black" />

    <SearchView
        android:id="@+id/homestay_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_round_height"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:background="@drawable/et_round"
        android:drawableStart="@drawable/custom_ic_location"
        android:drawablePadding="@dimen/normal_margin"
        android:ems="10"
        android:hint="@string/search_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="@dimen/normal_margin"
        android:paddingEnd="@dimen/normal_margin"
        android:textSize="@dimen/normal_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_homestay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"/>

</LinearLayout>